@page "/users"

<PageTitle>@("JsonPlaceholder UI | Users")</PageTitle>

<h1 class="text-center text-md-start mt-3">@("Users")</h1>

<div class="container-fluid">
    <div class="row">
        @if (UsersCollection is not null)
        {
            @foreach (var User in UsersCollection)
            {
                <div class="col-xl-4 col-md-3">
                    <div class="card">
                        <h5 class="card-header text-muted">@($"@{User.Username}")</h5>
                        <div class="card-body">
                            <h5 class="card-title">@User.Name</h5>
                            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>