@page "/users"

<PageTitle>@("JsonPlaceholder UI | Users")</PageTitle>

<h1 class="text-center text-md-start my-3">@("Users")</h1>

<div class="container-fluid">
    <div class="row g-3">
        @if (UsersCollection is not null)
        {
            @foreach (var User in UsersCollection)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card">
                        <h5 class="card-header text-muted fw-bold">@($"@{User.Username}")</h5>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@User.Name</h5>
                            <div class="mb-1">
                                <i class="bi bi-envelope me-2"></i> @User.Email
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-telephone me-2"></i> @User.Phone
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-buildings me-2"></i> @User.Company?.Name
                            </div>
                            <div class="mb-1">
                                <i class="bi bi-globe me-2"></i> <a class="text-decoration-none" href="@($"http://{User.Website}")" target="_blank">@User.Website</a>
                            </div>
                            <div class="d-flex justify-content-end">
                                <a href="@($"users/{User.Id}")" class="fw-bold">@("See Profile")</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>